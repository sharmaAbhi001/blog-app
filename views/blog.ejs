<!DOCTYPE html>
<html lang="en">

<head>
<%- include('./partial/head.ejs') %>
    <title>Blog</title>
</head>

<body>
<%- include('./partial/nav.ejs') %>

 <div class="container mt-4">
   <h1><%= blog.title %></h1>
   <img src="<%= blog.coverImageURl %>" class="card-img-top img-fluid" style="max-width: 700px; height: auto;" alt="...">
   <pre><%= blog.body %></pre>
 </div>

 <div class="container">
  <img src="<%= blog.createdBy.profileImageURL%>" width="100px"  alt="no image"> <%= blog.createdBy.fullName %>
 </div>


 <div class="container mt-3">
   <h1>Comments</h1>
  <% if (locals.user) { %>
    <form action="/blog/comment/<%= blog._id %>" method="post">
      <div class="mb-3">
       <input type="text" name="content" class="form-control" placeholder="Enter Comments">
       <button type="submit" class="btn btn-sm btn-primary">Add</button>
      </div>
      </form>

      <div class="mt-3">
        <% comments.forEach(comment => { %>
          <img src="<%= blog.createdBy.profileImageURL%>" width="50px"  alt="no image"/>
           <%= blog.createdBy.fullName %>
           <pre><%= comment.content %></pre>
        <% }) %>
      </div>
<% } %>
 </div>



<%- include('./partial/footre.ejs') %>
</body>

</html>